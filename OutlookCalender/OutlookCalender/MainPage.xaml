<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutlookCalender.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Label Text="Login Name" Grid.Column="0" Margin="5"/>
            <Entry Text="{Binding Loginhint}" IsEnabled="{Binding LoginHintEnabled}" Grid.Column="1" Margin="5"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Text="Start Date" Grid.Column="0" Margin="5"/>
            <DatePicker Date="{Binding StartDate}" Grid.Column="1" Margin="5"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Text="End Date" Grid.Column="0" Margin="5"/>
            <DatePicker Date="{Binding EndDate}" Grid.Column="1" Margin="5"/>
        </Grid>
        <Button Grid.Row="3" 
                Text="Sync with Outlook.com"        
                Command="{Binding SyncCommand}" 
                IsEnabled="{Binding SyncCommand.IsEnabled}"
                Margin="5" />
        <SearchBar Text="{Binding SearchValue}" Grid.Row="4" Margin="5"/>
        <ListView Grid.Row="5" IsVisible="{Binding SearchResultListVisible}" Margin="5" ItemsSource="{Binding SearchResults}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Start Date" Grid.Row="0" Grid.Column="0" Margin="5"/>
                                <Label Text="End Date" Grid.Row="0" Grid.Column="1" Margin="5"/>
                                <Label Text="Subject" Grid.Row="0" Grid.Column="2" Margin="5"/>
                                <Label Text="{Binding Start}" Grid.Row="1" Grid.Column="0" Margin="5"/>
                                <Label Text="{Binding End}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                                <Label Text="{Binding Subject}" Grid.Row="1" Grid.Column="2" Margin="5"/>
                            </Grid>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>
